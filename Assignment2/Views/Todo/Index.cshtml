@model Assignment2.Models.TodoViewModels.IndexViewModel

@{
    ViewData["Title"] = "ActiveTodoes";
}

<h2>My Todo list</h2>

<p>
    <a asp-action="Add">Add new todo</a>
    &nbsp;
    <a asp-action="Completed">See completed todoes</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Task
            </th>
            <th>
                Date Due
            </th>
            <th>
                Time left
            </th>
            <th>
                Todo Item Labeles
            </th>
            <th>
                Mark as completed
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TodoItemModels) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeLeft)
            </td>
            <td>
                @if (item.Labels != null)
                {
                    @foreach (var label in item.Labels)
                    {
                    @Html.DisplayFor(modelLabel => label.Value)
                        <br />
                    }
                }
            </td>
            <td>
                <a asp-action="MarkAsCompleted" asp-route-Id="@item.Id">Mark as completed</a>
            </td>
        </tr>
}
    </tbody>
</table>
